.content {
  padding: 20rpx;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
}
.content .bigFont {
    font-size: 80rpx;
}
.content .searchBox {
    position: relative;
    width: 100%;
    height: 80rpx;
}
.content .searchBox .weatherInput {
      border: 2rpx solid #41a863;
      font-size: 28rpx;
      border-radius: 30rpx;
      height: 80rpx;
      line-height: 80rpx;
      padding-left: 20rpx;
      -webkit-box-sizing: border-box;
              box-sizing: border-box;
      background-color: #fff;
      color: #999;
      z-index: 99;
}
.content .searchBox .weatherBtn {
      width: 140rpx;
      text-align: center;
      height: 80rpx;
      line-height: 80rpx;
      color: #fff;
      background-color: #41a863;
      border-radius: 0 30rpx 30rpx 0;
      position: absolute;
      right: 0;
      top: 0;
      font-size: 32rpx;
      z-index: 100;
}
.content .weatherCon .cityName {
    text-align: center;
    font-size: 40rpx;
    margin: 20rpx 0;
    font-weight: 1000;
}
.content .weatherCon .realtimeCon {
    width: 100%;
    background-color: #41a863;
    color: #fff;
    border-radius: 30rpx;
    padding: 30rpx;
    margin-top: 40rpx;
    -webkit-box-sizing: border-box;
            box-sizing: border-box;
}
.content .weatherCon .realtimeCon .temperature {
      position: relative;
      width: 140rpx;
}
.content .weatherCon .realtimeCon .temperature .c {
        position: absolute;
        top: 0;
        right: 0;
}
.content .weatherCon .realtimeCon .info {
      font-size: 28rpx;
      margin-left: 10rpx;
}
.content .weatherCon .realtimeCon .otherCon {
      font-size: 32rpx;
}
.content .weatherCon .futureTitle {
    text-align: center;
    height: 80rpx;
    line-height: 80rpx;
    margin-top: 40rpx;
    border-radius: 30rpx;
    color: #41a863;
    border: 2rpx solid #41a863;
}
.content .weatherCon .future {
    width: 100%;
    background-color: #41a863;
    border-radius: 30rpx;
    color: #fff;
    padding: 30rpx;
    -webkit-box-sizing: border-box;
            box-sizing: border-box;
    font-size: 28rpx;
    margin-top: 40rpx;
}
.content .weatherCon .future .futureWeather {
      margin-top: 20rpx;
}
.content .weatherCon .future .futureWeather text {
        margin-right: 30rpx;
}

